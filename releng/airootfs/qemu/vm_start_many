# Start 
# ./vm_start <name>

for i in {0..9}; do

# Randomize MAC address
printf -v macaddr "52:54:%02x:%02x:%02x:%02x" $(( $RANDOM & 0xff)) $(( $RANDOM & 0xff )) $(( $RANDOM & 0xff)) $(( $RANDOM & 0xff ))

qemu-system-x86_64 -drive file=$1$i.qcow2 \
-nographic -enable-kvm \
-net nic,macaddr="$macaddr" \
-net user,hostfwd=tcp::2200"$i"-:22 -m 144M &

# vm's Ip address is 10.0.2.15 anyway, change that!
# also remove existing master_minion key from LFS build
# -net user,net=<ip>/netmask ??
done
